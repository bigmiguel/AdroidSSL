					<View height="3dp"> </View>
				 		<Label id="lblTArea" class="lbl" >Area:</Label><Label id="lblNomArea" class="dato">Miguel</Label>
				 	<View height="3dp"> </View>
				</TableViewRow>
				<TableViewRow class="rowDatos" layout="horizontal">
					<View height="3dp"> </View>
						 <Label id="lblTPuesto" class="lbl" >Puesto:</Label><Label id="lblNomPuesto" class="dato">Miguel</Label>
					<View height="3dp"> </View>
				</TableViewRow>
			</TableViewSection>
		</TableView>
	</View>
</Alloy>
