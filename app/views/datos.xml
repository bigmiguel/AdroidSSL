<Alloy>	
	<View layout="vertical">
		<ImageView width="30%" height="22%" image="/images/empDefault.png"></ImageView>
		<TableView>		
			<HeaderView>
				<Label id="lblCabecera" class="cabezera">Mis Datos:</Label>
			</HeaderView>		
			<TableViewSection>									
				<TableViewRow class="rowDatos">
					<View layout="horizontal">				
				 		<Label id="lblTNombre" class="lbl">Nombre:</Label><Label id="lblNombre" class="dato">Miguel</Label>
					</View>
				</TableViewRow>
				<TableViewRow class="rowDatos">
					<View layout="horizontal">
				 		<Label id="lblTEdad" class="lbl" >Edad:</Label><Label id="lblEdad" class="dato">Miguel</Label>
					</View>
				</TableViewRow>
				<TableViewRow class="rowDatos">
					<View layout="horizontal">
						 <Label id="lblTEmpleado" class="lbl" >Num. Empleado:</Label><Label id="lblNEmpleado" class="dato">Miguel</Label>
					</View>		
				</TableViewRow>
				<TableViewRow class="rowDatos">
					<View layout="horizontal">
				 		<Label id="lblTCentroLaboral" class="lbl" >Centro Laboral:</Label><Label id="lblNomCentro" class="dato">Miguel</Label>
					</View>
				</TableViewRow>
				<TableViewRow class="rowDatos">
					<View layout="horizontal">
				 		<Label id="lblTArea" class="lbl" >Area:</Label><Label id="lblNomArea" class="dato">Miguel</Label>
					</View>
				</TableViewRow>
				<TableViewRow class="rowDatos">
					<View layout="horizontal">
						 <Label id="lblTPuesto" class="lbl" >Puesto:</Label><Label id="lblNomPuesto" class="dato">Miguel</Label>
					</View>
				</TableViewRow>
			</TableViewSection>
		</TableView>
	</View>
</Alloy>
